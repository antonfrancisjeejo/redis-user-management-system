<h1>Add User</h1>
{{#if error}}<span>{{error}}</span>{{/if}}
<form class="mt-3" method="POST" action="/user/add">
    <div class="form-group mx-3">
        <label>ID</label>
        <input type="text" name="id" placeholder="Add ID" class="form-control" />
    </div>
    <div class="form-group mx-3">
        <label>First Name</label>
        <input type="text" name="first_name" placeholder="Add ID" class="form-control" />
    </div>
    <div class="form-group mx-3">
        <label>Last Name</label>
        <input type="text" name="last_name" placeholder="Last Name" class="form-control" />
    </div>
    <div class="form-group mx-3">
        <label>Email</label>
        <input type="text" name="email" placeholder="Email" class="form-control" />
    </div>
    <div class="form-group mx-3">
        <label>Phone</label>
        <input type="text" name="phone" placeholder="Phone" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary  ml-3" value="Save" />
</form>